<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="MovieApp.AddPage" Padding="20,100,20,20" BackgroundColor="LightSkyBlue" >
   
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Add Movie Title" />
            <Entry x:Name="title" Placeholder="Title" />
            <Label Text="Add Overview" />
            <Entry x:Name="overview" Placeholder="Enter the description" />
            <Button Text="ADD" BorderColor="Gold" BorderWidth="1" Margin="7" Clicked="AddMovie_Clicked"/>
            <Button Text="Show my Movies" BorderColor="Gold" BorderWidth="1" Margin="7" Clicked="Show_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>